@page
@model DevApp.Pages.InstallModel
@{
    ViewData["Title"] = "Install " + Model.AppName;
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .install-card {
            max-width: 600px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .app-icon {
            font-size: 4rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card install-card">
            <div class="card-body text-center p-5">
                <div class="app-icon mb-4">ðŸ“¦</div>
                <h1 class="mb-3">@Model.AppName</h1>
                <p class="lead text-muted mb-4">Version: @Model.BuildName</p>
                <p class="text-muted mb-4">Environment: <span class="badge bg-primary">@Model.Environment</span></p>
                
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <strong>Error:</strong> @Model.ErrorMessage
                    </div>
                }
                else
                {
                    <div class="d-grid gap-3">
                        <a href="@Model.AppInstallerUrl" class="btn btn-primary btn-lg" download>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-download me-2" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
                            </svg>
                            Download & Install
                        </a>
                        
                        <button type="button" class="btn btn-outline-secondary" onclick="window.close()">
                            Close
                        </button>
                    </div>
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <h6 class="alert-heading">ðŸ“¥ Quick Install Steps:</h6>
                        <ol class="mb-0 small">
                            <li><strong>Click "Download & Install"</strong> above</li>
                            <li><strong>Click on the downloaded file</strong> in your browser's download bar (bottom of window)</li>
                            <li><strong>Click "Install"</strong> in the Windows App Installer dialog</li>
                            <li>Done! The app will appear in your Start Menu</li>
                        </ol>
                    </div>
                    
                    <div class="mt-3 small text-muted">
                        <p class="mb-1"><strong>ðŸ’¡ Pro Tip:</strong> After clicking "Download & Install", look at the <strong>bottom left</strong> of your browser window for the downloaded file. Click it to start the installation immediately.</p>
                        <p class="mb-0"><strong>Environment:</strong> <span class="badge bg-primary">@Model.Environment</span> | <strong>Version:</strong> @Model.BuildName</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
